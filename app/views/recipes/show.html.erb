<p>
    <h1><%= @recipe.name %></h1>
</p>

<div class="row"> 
  <div class="col-md-4 pull-right center">
        <%= gravatar_for @recipe.chef, size: 200 %>
        <p>
          <h5>Created for you by: <%= @recipe.chef.chefname %></h5>
        </p>
  </div>
  <div class="col-md-8 ">
        <h3><%= @recipe.summary %></h3> 
        <div class="well">
            <p><%= (@recipe.description) %></p>
            
        </div>
  </div>
  
  <h5><%= link_to "Return to Recipes Page", recipes_path, class: "btn btn-warning btn-small" %></h5>